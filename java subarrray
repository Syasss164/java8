import java.util.Scanner;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        // Step 1: Read input
        int n = sc.nextInt();
        int[] a = new int[n];
        for (int i = 0; i < n; i++) {
            a[i] = sc.nextInt();
        }
        
        int negativeSubarrays = 0;
        
        // Step 2: Iterate through all possible starting points
        for (int i = 0; i < n; i++) {
            int currentSum = 0;
            
            // Step 3: Iterate through all possible ending points starting from i
            for (int j = i; j < n; j++) {
                // Add the current element to the running sum of the subarray [i...j]
                currentSum += a[j];
                
                // Step 4: Check if the sum is negative
                if (currentSum < 0) {
                    negativeSubarrays++;
                }
            }
        }
        
        // Step 5: Print the final count
        System.out.println(negativeSubarrays);
        sc.close();
    }
}
